---
import Container from "./Container.astro";

---

<div id="Swap">
    <Container>
      <div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
        <!-- Swap Container -->
        <div class="w-full max-w-2xl shadow-lg rounded-lg p-6">
          <!-- Token Swap Section -->
          <div class="flex justify-between items-center space-x-4">
            <!-- Token Input Section -->
            <div class="w-1/2 flex flex-col space-y-2">
              <label for="fromToken" class="text-sm font-semibold">From</label>
              <div class="flex items-center space-x-2 bg-gray-100 p-3 rounded-lg">
                <input
                  type="text"
                  id="fromToken"
                  placeholder="0.00"
                  class="w-full bg-transparent outline-none text-xl font-bold"
                />
                <select
                  id="tokenList"
                  class="p-2 text-gray-800 rounded-md shadow-sm">
                  <option value="sol">SOL</option>
                  <option value="eth">ETH</option>
                </select>
              </div>
            </div>

            <!-- Swap Button in the middle -->
            <div class="flex items-center">
              <button class="transform rotate-90 bg-gray-200 p-2 rounded-full">
                <svg
                  class="w-6 h-6 text-gray-800"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  ></path>
                </svg>
              </button>
            </div>

            <!-- Token Output Section -->
            <div class="w-1/2 flex flex-col space-y-2">
              <label for="toToken" class="text-sm font-semibold">To</label>
              <div class="flex items-center space-x-2 bg-gray-100 p-3 rounded-lg">
                <input
                  type="text"
                  id="toToken"
                  placeholder="0.00"
                  class="w-full bg-transparent outline-none text-xl font-bold"
                />
                <select
                  id="tokenList"
                  class="p-2 text-gray-800 rounded-md shadow-sm">
                  <option value="usdc">USDC</option>
                  <option value="btc">BTC</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Price Info Section (Horizontally aligned) -->
          <div class="flex justify-between items-center mt-6 space-x-4">
            <div class="flex flex-col text-center">
              <span class="text-sm text-gray-500">1 SOL =</span>
              <span class="text-lg font-semibold">20 USDC</span>
            </div>
            <div class="flex flex-col text-center">
              <span class="text-sm text-gray-500">1 USDC =</span>
              <span class="text-lg font-semibold">0.05 SOL</span>
            </div>
          </div>

          <!-- Swap Button -->
          <div class="mt-6">
            <button class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700">
              Swap Now
            </button>
          </div>
        </div>
      </div>
    </Container>
</div>