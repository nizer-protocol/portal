---
import Container from "./Container.astro"

---

<div class="relative py-16">
  <div aria-hidden="true" class="absolute inset-0 h-max w-full m-auto grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
    <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
    <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
  </div>
  <Container>
    <div class="relative">
      <div class="mt-6 m-auto space-y-6 md:w-8/12 lg:w-7/12">
        <h1 class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-5xl">
          We love and supported by them
        </h1>
        <p class="text-center text-xl text-gray-600 dark:text-gray-300">
          (NOT yet reached a partnership)
        </p>
      </div>
      <div class="mt-12 flex items-center justify-center gap-8">
        <img
          loading="lazy"
          width="140"
          height="140"
          src="./images/logos/solana.jpg"
          alt="member photo"
          class="h-24 w-24 rounded-md"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="./images/logos/sanctum.jpg"
          alt="member photo"
          class="h-24 w-24 rounded-md"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="./images/logos/jito.png"
          alt="member photo"
          class="h-24 w-24 rounded-md"
        />
        <img
          loading="lazy"
          width="200"
          height="200"
          src="./images/logos/superteam.jpg"
          alt="member photo"
          class="h-24 w-24 rounded-md"
        />
      </div>
    </div>
  </Container>
</div>